extends layout

block content
    div#data

    script.
        $.ajax({
            url: window.location.origin + '/api/profile',
            method: 'POST',
            data: { username: '#{username}'},
            dataType: 'json',
            success: function (res) {
                console.log(res)
                $('#data').html(res.user._id)
            },
            error: function (err) {
                console.log(err);
                $('#status').html(err.responseText)
            }
        });